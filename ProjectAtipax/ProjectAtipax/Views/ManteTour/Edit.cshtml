@model ProjectAtipax.Models.Tour

@{
    ViewData["Title"] = "Edit";

}


<div class="editarCuadro">
    <h2>Editar Tour</h2>

    @if (@ViewBag.mensajeEliminar != null)
    {
        <div class="alert alert-primary" role="alert">
            @ViewBag.mensajeEditar
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

        </div>
    }
    <div class="formularioEdit">
        <form asp-action="Edit" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <label asp-for="idTour" class="control-label"></label>
                <input asp-for="idTour" class="form-control" readonly="true" />
                <span asp-validation-for="idTour" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="descripcion" class="control-label"></label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <input type="submit" value="Actualizar" class="btn btn-primary" />
                <a asp-action="Create" class="btn btn-primary">Volver</a>
            </div>
        </form>
    </div>
  
</div>