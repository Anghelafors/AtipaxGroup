@model IEnumerable<ProjectAtipax.Models.Compra>

    @{
        ViewData["Title"] = "Resumen";
    }

    <h1>Resumen</h1>

<p>
  <a asp-action="Portal" class="btn btn-primary">Ir a la Tienda</a>
  <a asp-action="Comprar" class="btn btn-primary">Registrar Compra</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.monto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
            <td>              
                @Html.ActionLink("Delete", "Delete", new { id=item.codigo })
            </td>
        </tr>
}   <!--agregar el total del monto-->
  <tr>
    <td colspan="5">Monto del Pedido</td>
    <td>@Model.Sum(c=>c.monto)</td>
  </tr>
    </tbody>
</table>
